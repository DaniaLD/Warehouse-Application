<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>مدیریت فرم های درخواست خرید</title>
</head>
<body>
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <h1 style="margin-right: 20px;text-align: right;" class="col-lg-10">پنل کاربری کارشناس برنامه ریزی > مدیریت فرم های درخواست خرید</h1>
        <a class="nav-item nav-link" href="/logout" style="float: left;">
            <button class="btn btn-danger"><i class="fa fa-sign-out" aria-hidden="true" style="margin-left: 10px;"></i>خروج</button>
        </a>
    </div>
    <hr>
    <% if(error_msg.length) { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error_msg %></h5>
    </div>
    <% } %>
    <% if(success_msg.length) { %>
    <div class="row alert alert-success" style="text-align: center;">
        <h5 class="col-lg-12"><%= success_msg %></h5>
    </div>
    <% } %>
    <table class="table table-striped table-responsive-lg">
        <thead>
        <tr>
            <th style="width: 8%;text-align: center;" scope="col">کد درخواست</th>
            <th style="width: 8%;text-align: center;" scope="col">شماره پرسنلی</th>
            <th style="width: 15%;text-align: center;" scope="col">نام انباردار</th>
            <th style="width: 15%;text-align: center;" scope="col">نام خانوادگی انباردار</th>
            <th style="width: 15%;text-align: center;" scope="col">تاریخ ثبت</th>
            <th style="width: 15%;text-align: center;" scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <% for(let form of forms) { %>
        <tr>
            <td style="width: 10%;text-align: center;"><%= form.form_id %></td>
            <td style="width: 10%;text-align: center;"><%= form.form_sta_id %></td>
            <td style="width: 20%;text-align: center;"><%= form.first_name %></td>
            <td style="width: 20%;text-align: center;"><%= form.last_name %></td>
            <td style="width: 20%;text-align: center;"><%= createdJalaali %></td>
            <td>
                <a href="/purchase-query-form/:<%= form.form_id %>">
                    <button class="btn btn-warning">
                        <i class="fa fa-search" aria-hidden="true" style="margin-left: 10px;"></i>
                        <span style="font-size: 12px;">بررسی</span>
                    </button>
                </a>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>

<% include ./partials/scripts.ejs %>
</body>
</html>