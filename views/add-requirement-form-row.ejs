<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>ثبت جزئیات فرم اعلام نیاز</title>
</head>
<body>
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <h1 style="margin-right: 20px;text-align: right;" class="col-lg-10">پنل کاربری کارشناس انبار > ثبت جزئیات فرم اعلام نیاز</h1>
        <a class="nav-item nav-link" href="/logout" style="float: left;">
            <button class="btn btn-danger"><i class="fa fa-sign-out" aria-hidden="true" style="margin-left: 10px;"></i>خروج</button>
        </a>
    </div>
    <hr>
    <% if(error_msg.length) { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error_msg %></h5>
    </div>
    <% } %>
    <% if(success_msg.length) { %>
    <div class="row alert alert-success" style="text-align: center;">
        <h5 class="col-lg-12"><%= success_msg %></h5>
    </div>
    <% } %>
    <form action="/add-requirement-form-row/:<%= formID %>" method="post" style="margin: 35px 0 35px;">
        <div class="row justify-content-center" style="text-align: right;">
            <div class="form-group col-lg-3">
                <label>کد جنس<span style="color: red;margin-right: 7px;">*</span></label>
                <input type="text" name="id" class="form-control">
            </div>
            <div class="form-group col-lg-3">
                <label>تعداد<span style="color: red;margin-right: 7px;">*</span></label>
                <input type="text" name="no" class="form-control">
            </div>
        </div>
        <div class="row justify-content-center" style="text-align: right;">
            <div class="form-group">
                <label>توضیحات</label>
                <textarea name="explanation" cols="30" rows="10" style="border: 1px solid #cccccc"></textarea>
            </div>
        </div>
        <div class="row justify-content-center" style="margin-top: 20px;">
            <button type="submit" class="btn btn-success" style="margin-left: 20px;">ثبت</button>
            <a href="/requirement-form-management"><button type="button" class="btn btn-danger">لغو</button></a>
        </div>
    </form>
    <table class="table table-striped table-responsive-lg">
        <thead>
        <tr>
            <th style="width: 8%;text-align: center;" scope="col">کد درخواست</th>
            <th style="width: 8%;text-align: center;" scope="col">کد کالا</th>
            <th style="width: 15%;text-align: center;" scope="col">نام کالا</th>
            <th style="width: 15%;text-align: center;" scope="col">واحد</th>
            <th style="width: 15%;text-align: center;" scope="col">تعداد</th>
            <th style="width: 15%;text-align: center;" scope="col">توضیحات</th>
        </tr>
        </thead>
        <tbody>
        <% for(let row of rows) { %>
        <tr>
            <td style="width: 20%;text-align: center;"><%= row.form_id %></td>
            <td style="width: 20%;text-align: center;"><%= row.good_id %></td>
            <td style="width: 20%;text-align: center;"><%= row.name %></td>
            <td style="width: 20%;text-align: center;"><%= row.unit %></td>
            <td style="width: 20%;text-align: center;"><%= row.no %></td>
            <td style="width: 20%;text-align: center;"><%= row.explanation %></td>
        </tr>
        <% } %>
        </tbody>
    </table>

</div>

<% include ./partials/scripts.ejs %>
</body>
</html>