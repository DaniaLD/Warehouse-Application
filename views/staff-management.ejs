<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>مدیریت کاربران</title>
</head>
<body>
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <h1 style="margin-right: 20px;text-align: right;" class="col-lg-12">پنل کاربری راهبر > مدیریت کاربران</h1>
    </div>
    <hr>
    <% if(error_msg.length) { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error_msg %></h5>
    </div>
    <% } %>
    <% if(success_msg.length) { %>
    <div class="row alert alert-success" style="text-align: center;">
        <h5 class="col-lg-12"><%= success_msg %></h5>
    </div>
    <% } %>
    <a href="/add-staff">
        <button class="btn btn-success" style="margin: 30px;float: right;"><i class="fa fa-user-plus" aria-hidden="true" style="margin-left: 10px;"></i>افزودن کارمند</button>
    </a>
    <table class="table table-striped table-responsive-lg">
        <thead>
        <tr>
            <th style="width: 20%;text-align: center;" scope="col">نام</th>
            <th style="width: 20%;text-align: center;" scope="col">نام خانوادگی</th>
            <th style="width: 20%;text-align: center;" scope="col">سمت</th>
            <th style="width: 20%;text-align: center;" scope="col">شماره پرسنلی</th>
            <th style="width: 20%;text-align: center;" scope="col">وضعیت</th>
            <th style="width: 20%;text-align: center;" scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        <% for(let staff of staffs) { %>
        <tr id="<%= staff.id %>">
            <td style="width: 20%;text-align: center;"><%= staff.first_name %></td>
            <td style="width: 20%;text-align: center;"><%= staff.last_name %></td>
            <td style="width: 20%;text-align: center;"><%= staff.post_name %></td>
            <td style="width: 20%;text-align: center;"><%= staff.id %></td>
            <% if(staff.activate === 1) { %>
            <td style="width: 20%;text-align: center;">فعال</td>
            <% } else { %>
            <td class="table-danger" style="width: 25%;text-align: center;">غیر فعال</td>
            <% } %>
            <td>
                <a href="/edit-staff/:<%= staff.id %>">
                    <button class="btn btn-warning">
                        <i class="fa fa-pencil" aria-hidden="true" style="margin-left: 10px;"></i>
                        <span style="font-size: 12px;">ویرایش</span>
                    </button>
                </a>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>

    <% include ./partials/footer.ejs %>
</div>

<% include ./partials/scripts.ejs %>
</body>
</html>