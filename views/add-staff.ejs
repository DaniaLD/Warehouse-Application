<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>افزودن کارمند</title>
</head>
<body>
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <h1 style="margin-right: 20px;text-align: right;" class="col-lg-12">پنل کاربری راهبر > افزودن کارمند</h1>
    </div>
    <hr>
    <% if(error_msg.length) { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error_msg %></h5>
    </div>
    <% } %>
    <% if(errors) {
    errors.forEach(error => { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error.msg %></h5>
    </div>
    <% })} %>
    <form class="col-lg-12" action="/add-staff" method="post">
        <div class="row justify-content-center" style="text-align: right;">
            <div class="form-group col-lg-4">
                <label>نام<span style="color: red;margin-right: 7px;">*</span></label>
                <input type="text" class="form-control" name="first_name">
            </div>
        </div>
        <div class="row justify-content-center" style="text-align: right;">
            <div class="form-group col-lg-4">
                <label>نام خانوادگی<span style="color: red;margin-right: 7px;">*</span></label>
                <input type="text" class="form-control" name="last_name">
            </div>
        </div>
        <div class="row justify-content-center" style="text-align: right;">
            <div class="form-group col-lg-4">
                <label>سمت<span style="color: red;margin-right: 7px;">*</span></label>
                <select class="custom-select" name="post">
                    <option selected></option>
                    <option>کارشناس انبار</option>
                    <option>کارشناس خرید</option>
                    <option>کارشناس برنامه ریزی</option>
                </select>
            </div>
        </div>
        <div class="row justify-content-center" style="margin-top: 20px;">
            <button type="submit" class="btn btn-success" style="margin-left: 20px;">افزودن</button>
            <a href="/staff-management"><button type="button" class="btn btn-danger">لغو</button></a>
        </div>
    </form>



    <% include ./partials/footer.ejs %>
</div>

<% include ./partials/scripts.ejs %>
</body>
</html>