<!doctype html>
<html lang="en">
<head>
    <% include ./partials/head.ejs %>
    <title>مدیریت شرکت ها</title>
</head>
<body>
<div class="container">
    <div class="row" style="margin-top: 20px;">
        <h1 style="margin-right: 20px;text-align: right;" class="col-lg-10">پنل کاربری راهبر > مدیریت شرکت ها</h1>
        <a class="nav-item nav-link" href="/logout" style="float: left;">
            <button class="btn btn-danger"><i class="fa fa-sign-out" aria-hidden="true" style="margin-left: 10px;"></i>خروج</button>
        </a>
    </div>
    <hr>
    <% if(error_msg.length) { %>
    <div class="row alert alert-danger" style="text-align: center;">
        <h5 class="col-lg-12"><%= error_msg %></h5>
    </div>
    <% } %>
    <% if(success_msg.length) { %>
    <div class="row alert alert-success" style="text-align: center;">
        <h5 class="col-lg-12"><%= success_msg %></h5>
    </div>
    <% } %>
    <a href="/add-company">
        <button class="btn btn-success" style="margin: 30px;float: right;"><i class="fa fa-building-o" aria-hidden="true" style="margin-left: 10px;"></i>افزودن شرکت</button>
    </a>
    <table class="table table-striped table-responsive-lg">
        <thead>
        <tr>
            <th style="width: 20%;text-align: center;" scope="col">نام</th>
            <th style="width: 20%;text-align: center;" scope="col">شماره تلفن</th>
            <th style="width: 20%;text-align: center;" scope="col">ایمیل</th>
            <th style="width: 20%;text-align: center;" scope="col">آدرس</th>
            <th style="width: 20%;text-align: center;" scope="col">کد شرکت</th>
            <th style="width: 20%;text-align: center;" scope="col"> </th>
        </tr>
        </thead>
        <tbody>
        <% for(let company of companies) { %>
        <tr id="<%= company.id %>">
            <td style="width: 20%;text-align: center;"><%= company.name %></td>
            <td style="width: 20%;text-align: center;"><%= company.phone %></td>
            <td style="width: 20%;text-align: center;"><%= company.email %></td>
            <td style="width: 20%;text-align: center;"><%= company.address %></td>
            <td style="width: 20%;text-align: center;"><%= company.id %></td>
            <td>
                <a href="/edit-company/:<%= company.id %>">
                    <button class="btn btn-warning">
                        <i class="fa fa-pencil" aria-hidden="true" style="margin-left: 10px;"></i>
                        <span style="font-size: 12px;">ویرایش</span>
                    </button>
                </a>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>

</div>

<% include ./partials/scripts.ejs %>
</body>
</html>